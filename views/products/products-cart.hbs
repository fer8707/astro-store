<div class="layout">
    <div>
            <h2 class="mt-5 mb-3">Tu carrito de compras:</h2>
    </div>
</div>


<div class="d-flex justify-content-between">
<div>

{{#each products}}

<div class="card border-primary mb-3 p-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{image}}" class="card-img-top" alt="image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{description}}</p>
        <h2><p class="card-text"><small class="text-secondary">Precio: ${{price}}</small></p></h2>
      </div>
    </div>
  </div>
</div>

{{/each}}
</div>
<div class="card border-primary p-4">
<h1 class="text-success">Total: ${{total}}</h1>
<div class="d-flex justify-content-center">
<a href="/products/checkout">
<button type="button" class="btn btn-warning">Pagar ahora</button>
</a>
</div>
</div>
</div>
</div>
</div>